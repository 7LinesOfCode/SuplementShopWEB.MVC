@model SuplementShopWEB.MVC.Application.ViewModel.Order.NewOrderVm

@{
    ViewData["Title"] = "CreateOrder";
}

<h1>Creating new order</h1>

<h4>Template for new order </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <select asp-for="CustomerId" asp-items="@(ViewData["Customers"] as SelectList)" class="form-control">
                    <option value="">If you can't see customer add new one</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <select asp-for="ItemId" asp-items="@(ViewData["Items"] as SelectList)" class="form-control">
                    <option value="">Choose Item</option>
                </select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountOfItems" class="control-label"></label>
                <input asp-for="CountOfItems" class="form-control" />
                <span asp-validation-for="CountOfItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateOrder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
