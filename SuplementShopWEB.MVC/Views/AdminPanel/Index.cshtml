@model SuplementShopWEB.MVC.Application.ViewModel.AdminPanel.Users.ListUserVm

@{
    ViewData["Title"] = "Users";
}

<h1>Users List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                 @Html.DisplayFor(modelItem => item.Id)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            <td>
                <a class="btn btn-danger" asp-action="DeleteUser" asp-route-id="@item.Id">Delete User Permanently</a>
            </td>
        </tr>
}
    </tbody>
</table>
