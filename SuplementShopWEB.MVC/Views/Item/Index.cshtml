@model SuplementShopWEB.MVC.Application.ViewModel.Item.ListItemForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>

<p>
    <a asp-action="AddItem" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
               Name
            </th>
            <th>
                Price $
            </th>
            <th>
                Count
            </th>
            <th>
                Available
            </th>
            <th>
                Type Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.IsAvailable, new { @disabled = "disabled" })
                </td>       
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Name)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
