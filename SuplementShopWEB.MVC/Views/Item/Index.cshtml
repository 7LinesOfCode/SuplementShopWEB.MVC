@model SuplementShopWEB.MVC.Application.ViewModel.Item.ListItemForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>

<p>
    <a asp-action="AddItem" class="btn btn-success">Create New</a>
</p>

<form asp-action="Index" asp-asp-controller="Item" method="post">
<div class="Search-and-Filter-container">
    <div class="Search-section" style="display: inline-block;">
        <label for="searchString">Search by Product Name:</label>
        <input type="text" asp-for="SearchString" name="searchString" id="searchString" />
        <input type="submit" value="Search" />
    </div>

<div class="Filter-section" style="display: inline-block;">
    <label for="isAvailable">Filter by Availability:</label>
    <input type="checkbox" asp-for="IsAvailable" id="isAvailable" >
    <input type="submit" value="Apply Filter" />
</div>


</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
               Name
            </th>
            <th>
                Price $
            </th>
            <th>
                Count
            </th>
            <th>
                Available
            </th>
            <th>
                Type Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.IsAvailable, new { @disabled = "disabled" })
                </td>       
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Name)
                </td>
            <td>
                @if (User.IsInRole("Admin"))
                    {
                      <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    }
               
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Details</a>
                   @if (User.IsInRole("Admin"))
                {
                   <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

    <div class="row">
        <table>
            <span>
            @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
            {
               <a>
                    @if (i != Model.CurrentlyPage)
                    {
                        <a href="javascript:PagerClick(@i)">@i</a>
                    }
                    else
                    {
                       <span>@i</span>
                    }
               </a>
            }
            </span>
        </table>
        <input type="hidden" name="pageNo" id="pageNo"/>
        <input type="hidden" name="pageSize" id="pageSize" value="5"/>
    </div class="row">
</form>

@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index)
        {
            document.getElementById("pageNo").value = index;
            document.forms[0].submit();
        }
    </script>
}